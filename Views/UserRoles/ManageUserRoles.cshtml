@model IEnumerable<DBugr.Models.ViewModels.ManageUserRolesViewModel>

<div class="container">
    <div class="row">
        @foreach (var btuser in Model)
            {
              <div class="card col-6" style="margin:2px">
                  <h2 class="m-t-0 h3"><b>Assign Roles to @btuser.BTUser.FullName</b></h2>
                  <p class="text-muted font-13 mb-30">
                      This form displays the current roles assigned to the user: @btuser.BTUser.FullName . Use the dropdown to select the roles that this user should have

                  </p>
                  <hr />
                  <form asp-controller="UserRoles" asp-action="ManageUserRoles" method="post">
                      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                      <input type="hidden" asp-for="@btuser.BTUser.Id" />
                      <div class="col-12">
                          <div class="form-group">
                              <label asp-for="@btuser.Roles" class="control-label">Roles for @btuser.BTUser.FullName</label>
                              <select asp-for="@btuser.SelectedRoles" class="form-control" asp-items="@btuser.Roles" multible="multiple"></select>
                          </div>
                      </div>
                      <hr />
                      <div class="col-12">
                          <div class="form-group pull-right">
                              <input type="submit" value="Assign Roles" class="btn btn-info" />
                              <a class="btn btn-info" asp-controller="Users" asp-action="Index">Cancel</a>
                          </div>
                      </div>
                  </form>
              </div>
            }
    </div>
</div>